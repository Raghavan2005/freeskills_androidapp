<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".login.profile.createprofilepackage.CreateProfile1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dancebold"
        android:padding="10dp"
        android:text="Welcome Here \n Get Started"
        android:textColor="@color/teal_200"
        android:textSize="54sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dancefont"
                android:gravity="center"
                android:padding="20dp"
                android:paddingEnd="10dp"
                android:text="Educational"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/school"
                android:onClick="checkButton"
                android:text="School"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/college"
                android:onClick="checkButton"
                android:text="College"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/self"
                android:onClick="checkButton"
                android:text="Self-taught"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/dancefont"
                android:gravity="center"
                android:padding="20dp"
                android:paddingEnd="10dp"
                android:text="Current Level"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Beginner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/beginner"
                android:onClick="checkButton1"
                android:text="Beginner"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/Intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/half"
                android:onClick="checkButton1"
                android:text="Intermediate"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/Advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/sullstart"
                android:onClick="checkButton1"
                android:text="Advanced"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white" />

</LinearLayout>