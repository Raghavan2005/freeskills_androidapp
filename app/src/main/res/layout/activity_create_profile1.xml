<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".login.profile.createprofilepackage.CreateProfile1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:fontFamily="@font/lsblack"
        android:text="Welcome Here \n Get Started"
        android:textColor="@color/Oranger"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lsblack"
                android:gravity="center"
                android:padding="20dp"
                android:paddingEnd="10dp"
                android:text="Educational"
                android:textColor="@color/purple_200"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/school"
                android:onClick="checkButton"
                android:text="School"
                android:textAlignment="center"
                android:buttonTint="@color/Oranger"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/college"
                android:onClick="checkButton"
                android:text="College"
                android:buttonTint="@color/Oranger"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/self"
                android:onClick="checkButton"
                android:text="Self-taught"
                android:buttonTint="@color/Oranger"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lsblack"
                android:gravity="center"
                android:padding="20dp"
                android:paddingEnd="10dp"
                android:text="Current Level"
                android:textColor="@color/purple_200"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Beginner"
                android:layout_width="match_parent"
                android:buttonTint="@color/Oranger"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/beginner"
                android:onClick="checkButton1"
                android:text="Beginner"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/Intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/half"
                android:onClick="checkButton1"
                android:text="Intermediate"
                android:buttonTint="@color/Oranger"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/Advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/Oranger"
                android:drawableEnd="@drawable/sullstart"
                android:onClick="checkButton1"
                android:text="Advanced"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </RadioGroup>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/box_rd"
        android:backgroundTint="@color/Oranger"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="@color/white" />

</LinearLayout>