<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292828"
    android:orientation="vertical"
    tools:context=".videoplayer.Player_Fragment">

    <ScrollView
        android:id="@+id/mainSsdcroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/action_settings"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Add your TextView at the top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/displayvideoimage"
                        android:layout_width="fill_parent"
                        android:layout_height="205dp"
                        android:cropToPadding="true"
                        android:src="@color/teal_200"
                        android:transitionName="@string/blue_namemain" />

                    <ImageButton
                        android:id="@+id/play"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#95454545"
                        android:clickable="true"
                        android:src="@drawable/play" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/coursetitile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center"
                            android:text="CSS Preprocessors"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/lang"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center"
                            android:text="English"
                            android:textColor="@color/Oranger"
                            android:textSize="23sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/videotime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="0dp"
                        android:drawableStart="@drawable/timehos"
                        android:drawableTint="@color/Oranger"
                        android:fontFamily="@font/robotothin"
                        android:gravity="center"
                        android:inputType="time"
                        android:text="1:43:54"

                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dis_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotobold"
                        android:text="asdasda asdas "
                        android:textAlignment="textStart"

                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/full_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing a good job description and a corresponding job ad requires proper separation of concerns. Posting a generic web developer job description in your ad when you are looking for an advanced front-end web developer, will bring numerous applications from people who are specialized in building back-end web services, or web designers who have absolutely no knowledge about programming."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/whitelist"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/purple_500"
                        android:drawableLeft="@drawable/whitelist_add"
                        android:text="Add To whitelist"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Add your RecyclerView below the TextView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/topicRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
